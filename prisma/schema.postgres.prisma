// 云端部署用：PostgreSQL 版本
// 部署前复制为 schema.prisma 并配置 DATABASE_URL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model AlbumCover {
  id          String   @id @default(cuid())
  imageUrl    String
  albumName   String
  artistName  String?
  releaseYear String?
  genre       String?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
